<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"

    >


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:foreground="@mipmap/cat__5_"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0">


        </ImageView>

        <LinearLayout
            android:id="@+id/storyUserBackButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/_10sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imageView"

                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/ic_baseline_arrow_back_ios_24"
                android:tint="@color/white">

            </com.google.android.material.imageview.ShapeableImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:text=" Back"
                android:textColor="@color/white"
                android:textSize="@dimen/_15sdp"
                android:textStyle="bold">

            </TextView>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"

            app:layout_constraintBottom_toBottomOf="parent">

<!--            android:orientation="horizontal"-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_250sdp"


                >

<!--                Entering bottom part-->

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="@dimen/_250sdp"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:paddingLeft="@dimen/_10sdp"
                        app:layout_constraintEnd_toStartOf="@+id/linearLayout"
                        app:layout_constraintStart_toStartOf="parent">


                        <!--                  TODO: Enter design of left side details part-->

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Tahmid Alam"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_28sdp"
                                android:textStyle="bold">

                            </TextView>
                        </FrameLayout>

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Age: 25"
                                android:textSize="@dimen/_15sdp"
                                android:textColor="@color/white"
                                android:textStyle="bold">

                            </TextView>
                        </FrameLayout>

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"


                                >

                                <FrameLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="@dimen/_20sdp"
                                    android:background="@drawable/background_input"
                                    android:backgroundTint="@color/white"
                                    android:paddingHorizontal="@dimen/_10sdp"
                                    android:layout_marginBottom="@dimen/_5sdp">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Religious"
                                        android:textSize="@dimen/_8sdp"
                                        android:layout_gravity="center_vertical">

                                    </TextView>
                                </FrameLayout>

                                <FrameLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="@dimen/_20sdp"
                                    android:background="@drawable/background_input"
                                    android:backgroundTint="@color/white"
                                    android:paddingHorizontal="@dimen/_10sdp"
                                    android:layout_marginBottom="@dimen/_5sdp">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Nerdy"
                                        android:textSize="@dimen/_8sdp"
                                        android:layout_gravity="center_vertical">

                                    </TextView>
                                </FrameLayout>

                                <FrameLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="@dimen/_20sdp"
                                    android:background="@drawable/background_input"
                                    android:backgroundTint="@color/white"
                                    android:paddingHorizontal="@dimen/_10sdp"
                                    android:layout_marginBottom="@dimen/_5sdp">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Student"
                                        android:textSize="@dimen/_8sdp"
                                        android:layout_gravity="center_vertical">

                                    </TextView>
                                </FrameLayout>





                            </LinearLayout>
                        </FrameLayout>

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Lorem Ipsum is simply dummy text of the printing and
                                                typesetting industry. "
                                android:textSize="@dimen/_15sdp"
                                android:textColor="@color/white">

                            </TextView>
                        </FrameLayout>
                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="More"
                                android:textSize="@dimen/_15sdp"
                                android:textColor="@color/white"
                                android:textStyle="bold">

                            </TextView>
                        </FrameLayout>


                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/linearLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"

                        app:layout_constraintEnd_toEndOf="parent">

                        <!--TODO: Enter right side interaction buttons parent-->

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical|center_horizontal"

                            android:paddingRight="@dimen/_10sdp">

                            <!--TODO: Enter buttons vertically-->

                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:background="@drawable/background_input_0"
                                android:backgroundTint="@color/white"
                                android:paddingHorizontal="@dimen/_3sdp"
                                android:paddingVertical="@dimen/_15sdp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    >
                                    <FrameLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:paddingBottom="@dimen/_5sdp"
                                        android:layout_gravity="center_horizontal">

                                        <com.google.android.material.imageview.ShapeableImageView
                                            android:layout_width="@dimen/_30sdp"
                                            android:layout_height="@dimen/_30sdp"

                                            app:srcCompat="@drawable/ic_baseline_favorite_border_24">

                                        </com.google.android.material.imageview.ShapeableImageView>
                                    </FrameLayout>

                                    <FrameLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:paddingBottom="@dimen/_5sdp"
                                        android:layout_gravity="center_horizontal">

                                        <com.google.android.material.imageview.ShapeableImageView
                                            android:layout_width="@dimen/_30sdp"
                                            android:layout_height="@dimen/_30sdp"
                                            app:srcCompat="@drawable/ic_baseline_close_24">

                                        </com.google.android.material.imageview.ShapeableImageView>
                                    </FrameLayout>

                                    <FrameLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:paddingBottom="@dimen/_5sdp"
                                        android:layout_gravity="center_horizontal">

                                        <com.google.android.material.imageview.ShapeableImageView
                                            android:layout_width="@dimen/_30sdp"
                                            android:layout_height="@dimen/_30sdp"
                                            app:srcCompat="@drawable/ic_baseline_menu_24">

                                        </com.google.android.material.imageview.ShapeableImageView>
                                    </FrameLayout>
                                    <FrameLayout
                                        android:id="@+id/enterChatButton"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:paddingBottom="@dimen/_5sdp"
                                        android:layout_gravity="center_horizontal">

                                        <com.google.android.material.imageview.ShapeableImageView
                                            android:layout_width="@dimen/_30sdp"
                                            android:layout_height="@dimen/_30sdp"
                                            app:srcCompat="@drawable/ic_baseline_chat_24">

                                        </com.google.android.material.imageview.ShapeableImageView>
                                    </FrameLayout>

                                </LinearLayout>

                            </FrameLayout>


                        </LinearLayout>

                    </LinearLayout>


                </androidx.constraintlayout.widget.ConstraintLayout>



            </LinearLayout>
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>


